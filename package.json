{
  "name": "ueve",
  "version": "1.1.0",
  "license": "MIT",
  "author": "Miroslav Vršecký <yamiteru@icloud.com>",
  "description": "🔥 Hellishly fast and 🤏 tiny async/sync event emitter",
  "source": "src/index.ts",
  "types": "dist/index.d.ts",
  "files": [
    "dist/*.js",
    "dist/*.map",
    "dist/*.ts"
  ],
  "exports": {
    ".": "./dist/index.js",
    "./async": "./dist/async.js",
    "./sync": "./dist/sync.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yamiteru/ueve.git",
    "directory": "src"
  },
  "keywords": [
    "event",
    "event-emitter",
    "reactive",
    "reactive-programming",
    "pub-sub",
    "pubsub",
    "javascript",
    "typescript"
  ],
  "bugs": {
    "url": "https://github.com/yamiteru/ueve/issues"
  },
  "homepage": "https://github.com/yamiteru/ueve",
  "scripts": {
    "fix:format": "prettier --write \"**/*.ts\"",
    "fix:lint": "eslint --fix --ext .ts .",
    "fix": "pnpm fix:lint && pnpm fix:format",
    "check:format": "prettier --check \"**/*.ts\"",
    "check:lint": "eslint --ext .ts .",
    "check": "pnpm check:lint && pnpm check:format",
    "test:coverage": "jest --collectCoverage",
    "test": "jest",
    "build": "pnpm clean && ts-node scripts/build.ts && tsc --emitDeclarationOnly --outDir dist",
    "clean": "rm -rf dist",
    "prepublishOnly": "pnpm test && pnpm build",
    "release": "release-it",
    "benchmark": "ts-node benchmarks/index.ts"
  },
  "devDependencies": {
    "@swc/cli": "0.1.62",
    "@swc/core": "1.3.38",
    "@swc/helpers": "0.4.14",
    "@types/jest": "29.4.0",
    "@types/node": "18.14.6",
    "@typescript-eslint/eslint-plugin": "5.54.1",
    "@typescript-eslint/parser": "5.54.1",
    "auto-changelog": "2.4.0",
    "esbuild": "0.17.11",
    "esbuild-plugin-swc": "1.0.1",
    "eslint": "8.35.0",
    "eslint-config-prettier": "8.7.0",
    "husky": "8.0.3",
    "jest": "29.5.0",
    "npm-dts": "1.3.12",
    "prettier": "2.8.1",
    "release-it": "15.7.0",
    "ts-jest": "29.0.5",
    "ts-node": "10.9.1",
    "typescript": "latest"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
